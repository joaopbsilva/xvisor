/dts-v1/;

#include "sabrelite-a9.dtsi"

/ {
	vmm {
		net {
			br0 {
				device_type = "netswitch";
				compatible = "bridge";
			};
		};
	};

	chosen {
		console = &SERIAL2;
		bootcmd =


			"vfs mount initrd /",

			/* Mount SD device */
			/*"vfs mount mmc0p0 / 2",*/

			/* Load guest0 device tree from file */
			"vfs fdt_load /guests guest0 /images/arm32/zynq.dtb mem0,physical_size,physsize,0x10000000",
			/* Create guest0 */
			"guest create guest0",
			/* Load guest0 images */
			"vfs guest_load_list guest0 /images/arm32/vexpress-a9/nor_flash.list",

			/* Load guest1 device tree from file */
			"vfs fdt_load /guests guest1 /images/arm32/zynq.dtb mem0,physical_size,physsize,0x10000000",
			/* Create guest1 */
			"guest create guest1",
			/* Load guest1 images */
			"vfs guest_load_list guest1 /images/arm32/vexpress-a9/nor_flash.list",

			/* Print banner */
			"vfs cat /system/banner.txt",

			/* Umount the SD/MMC card */
			"vfs umount /",

			/* Kick the guests */
			"guest kick guest0",
			"guest kick guest1";
	};
};
